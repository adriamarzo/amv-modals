{
  "name": "amv-modals",
  "version": "0.0.0-development",
  "description": "Modal management using reactJS",
  "type": "module",
  "main": "./dist/amv-modals.umd.cjs",
  "module": "./dist/amv-modals.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/amv-modals.js",
      "require": "./dist/amv-modals.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "check-types": "tsc --pretty --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "modal",
    "react",
    "reactjs",
    "typescript",
    "management"
  ],
  "author": {
    "name": "adria marzo"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/node": "^20.5.7",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^8.46.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.13",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "storybook": "^7.4.0",
    "typescript": "^5.1.6",
    "vite": "^4.3.0",
    "vite-plugin-dts": "^3.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adriamarzo/amv-modals.git"
  },
  "bugs": {
    "url": "https://github.com/adriamarzo/amv-modals/issues"
  },
  "homepage": "https://github.com/adriamarzo/react-alert-system#readme",
  "release": {
    "branches": ["main"]
  }
